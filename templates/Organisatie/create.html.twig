{% extends 'master.html.twig' %}

{% block title %}Nieuwe organisatie - {{ parent() }}{% endblock %}

{% block pdfsplitter %}{% endblock %}

{% block document %}

<p class="nav-internal--breadcrumb">
    <a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_index') }}" class=" nav-internal--breadcrumb__home">
        <span>Start</span>
    </a>
    <a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_apporganisatie_index') }}" class=" nav-internal--breadcrumb__dossier">
        <i class="nav-internal--breadcrumb__icon-arrow-right"></i>
        <span>Organisaties</span>
    </a>
    <a href="#" class="nav-internal--breadcrumb__section in-active">
        <i class="nav-internal--breadcrumb__icon-arrow-right"></i>
        <span>Nieuwe organisatie</span>
    </a>
</p>

<div class="document well">
    <div class="document-header">
        <h1 class="document-title">Nieuwe organisatie</h1>
    </div>
    <div class="form-container">
        {{ form_start(form, {'attr': {'class': 'default-form-style'} }) }}
        {{ form_row(form.naam) }}
        {% if app.user.type == 'admin' %}
            {{ form_help(form.naam) }}
        {% endif %}
        {{ form_row(form.emailAdresControle) }}
        {% if app.user.type == 'admin' %}
            {{ form_help(form.emailAdresControle) }}
        {% endif %}
        {{ form_row(form.standaardGkaTeam) }}
        {% if app.user.type == 'admin' %}
            {{ form_help(form.standaardGkaTeam) }}
        {% endif %}
        {{ form_row(form.allegroUsername) }}
        {% if app.user.type == 'admin' %}
            {{ form_help(form.allegroUsername) }}
        {% endif %}
        {{ form_row(form.allegroPassword) }}
        {% if app.user.type == 'admin' %}
            {{ form_help(form.allegroPassword) }}
        {% endif %}
        {{ form_row(form.allegroCheck) }}
        {% if app.user.type == 'admin' %}
            {{ form_help(form.allegroCheck) }}
        {% endif %}
        <p class="buttons right">
            <button type="submit" class="button primary">Opslaan</button>
            <a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_apporganisatie_index') }}">Annuleren</a>
        </p>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}