{% macro shv_status_to_class(status) -%}
    {%- if status == 0 -%}
        status-open
    {%- elseif status == 1 -%}
        status-bezig
    {%- elseif status == 2 -%}
        status-opgevoerd
    {%- elseif status == 3 -%}
        status-gecontroleerd
    {%- endif -%}
{%- endmacro %}
{% macro gka_status_to_class(status) -%}
    {%- if status == 0 -%}
        status-open
    {%- elseif status == 2 -%}
        status-opgevoerd
    {%- elseif status == 3 -%}
        status-gecontroleerd
    {%- endif -%}
{%- endmacro %}

{% macro details_widget(args) %}
  <style>
    details {
        /* Same as margin-bottom on common elements in reset.scss */
        margin-bottom: 1.925rem;
    }

    details>summary {
        cursor: pointer;
        font-weight: bold;
        margin-bottom: 0.5em;
    }
  </style>

  <details>
    <summary>{{ args.title }}</summary>
    <!-- Make sure the value has its own markup (HTML-tags) -->
    {{ args.value|raw }}
  </details>
{% endmacro %}
