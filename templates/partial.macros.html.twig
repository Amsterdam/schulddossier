{% macro shv_status_to_class(status) -%}
    {%- if status == 0 -%}
        status-open
    {%- elseif status == 1 -%}
        status-bezig
    {%- elseif status == 2 -%}
        status-opgevoerd
    {%- elseif status == 3 -%}
        status-gecontroleerd
    {%- endif -%}
{%- endmacro %}
