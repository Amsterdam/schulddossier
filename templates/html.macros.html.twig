{% macro details(args) %}
  <style>
    details>summary {
        cursor: pointer;
        font-weight: bold;
        margin-bottom: 0.5em;
    }
  </style>

  <details>
    <summary>{{ args.title }}</summary>
    <!-- Make sure the value has its own markup (HTML-tags) -->
    {{ args.value|raw }}
  </details>
{% endmacro %}
