<form class="form-inline form-search" method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded">

    <div class="form-group index-search-field">
        {% if fields|length > 1 %}
            <select class="form-control index-filter-name" name="{{ filterFieldName }}">
                {% for field, label in fields %}
                    <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
                {% endfor %}
            </select>
        {% else %}
            <input type="hidden" name="{{ filterFieldName }}" value="{{ fields|keys|first }}"/>
        {% endif %}

        <input class="form-control" type="search" value="{{ selectedValue }}" name="{{ filterValueName }}"
               placeholder="{{ 'zoekwoord of %zoekwoord%'|trans({}, 'KnpPaginatorBundle') }}"/>
        <button class="btn index-search-button">{{ options.button }}</button>
    </div>

</form>
