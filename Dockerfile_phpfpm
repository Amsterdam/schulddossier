FROM php:8.4-fpm-alpine

COPY certificates/adp_rootca.crt /usr/local/share/ca-certificates/adp_rootca.crt
RUN update-ca-certificates --fresh

RUN apk update && apk upgrade

RUN apk add \
    freetype-dev \
    icu-dev \
    imagemagick-dev \
    jpeg-dev \
    libjpeg-turbo-dev \
    libmcrypt-dev \
    libpng-dev \
    libreoffice \
    libxml2-dev \
    libxslt \
    libxslt-dev \
    libzip-dev \
    postgresql-dev \
    yarn \
    zlib-dev

RUN docker-php-ext-install \
    bcmath \
    gd \
    intl \
    opcache \
    pdo_pgsql \
    soap \
    xsl \
    zip

RUN docker-php-ext-configure \
    gd \
    --with-freetype \
    --with-jpeg

RUN docker-php-ext-enable bcmath intl soap xsl

RUN apk add --no-cache --virtual .build-deps \
    build-base  \
    autoconf

RUN apk del -f .build-deps

COPY docker-phpfpm/php-ini-overrides.ini /usr/local/etc/php/conf.d/
COPY docker-phpfpm/www.conf /usr/local/etc/php-fpm.d

RUN php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"
RUN php composer-setup.php --install-dir=/usr/local/bin --filename=composer
RUN php -r "unlink('composer-setup.php');"

RUN chown -fR www-data: /var/www

USER www-data

WORKDIR /var/www
COPY --chown=www-data . /var/www

RUN mkdir -p /var/www/var/cache \
    && mkdir -p /var/www/public/localworkingstorage/dossier

RUN composer install --prefer-dist --no-progress --no-scripts --optimize-autoloader

RUN yarn --ignore-scripts
RUN yarn encore prod
RUN yarn run postinstall

RUN composer dump-autoload --classmap-authoritative

CMD ["/var/www/docker-entrypoint_phpfpm.sh"]
